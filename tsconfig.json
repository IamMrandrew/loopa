{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "dom"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "allowJs": true,
    "strictNullChecks":false
  },
  "outDir": "./dist",
  "rootDir": "./src",
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
}